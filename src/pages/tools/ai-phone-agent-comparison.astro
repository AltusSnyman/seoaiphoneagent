<script>
  // Interactive functionality for the comparison tool
  document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const industryFilter = document.getElementById('industry-filter');
    const sizeFilter = document.getElementById('size-filter');
    const budgetFilter = document.getElementById('budget-filter');

    // ROI Calculator functionality
    const currentCostInput = document.getElementById('current-cost');
    const businessSizeSelect = document.getElementById('business-size');
    const annualSavings = document.getElementById('annual-savings');
    const roiPercentage = document.getElementById('roi-percentage');
    const paybackPeriod = document.getElementById('payback-period');

    function calculateROI() {
      const currentCost = parseInt(currentCostInput.value) || 50000;
      const businessSize = businessSizeSelect.value;
      
      let aiCost = 6000; // Base cost
      if (businessSize === 'medium') aiCost = 15000;
      if (businessSize === 'enterprise') aiCost = 35000;
      
      const savings = currentCost - aiCost;
      const roi = Math.round((savings / aiCost) * 100);
      const payback = Math.round((aiCost / savings) * 12 * 10) / 10;
      
      annualSavings.textContent = `$${savings.toLocaleString()}`;
      roiPercentage.textContent = `${roi}%`;
      paybackPeriod.textContent = `${payback} months`;
    }

    // Event listeners
    currentCostInput.addEventListener('input', calculateROI);
    businessSizeSelect.addEventListener('change', calculateROI);

    // Initialize calculations
    calculateROI();

    // Filter change handlers (placeholder for future functionality)
    industryFilter.addEventListener('change', function() {
      console.log('Industry filter:', this.value);
      // Future: Filter comparison data based on industry
    });

    sizeFilter.addEventListener('change', function() {
      console.log('Size filter:', this.value);
      // Future: Adjust recommendations based on business size
    });

    budgetFilter.addEventListener('change', function() {
      console.log('Budget filter:', this.value);
      // Future: Highlight solutions within budget range
    });
  });
</script>