    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .location-card p {
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    text-align: left;
  }

  .location-features, .location-cities, .location-contact {
    text-align: left;
    margin: 1.5rem 0;
  }

  .location-features h4, .location-cities h4 {
    font-family: var(--font-heading);
    color: var(--color-neon-blue);
    font-size: 1rem;
    margin-bottom: 0.5rem;
