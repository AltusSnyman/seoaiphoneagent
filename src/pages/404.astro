---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ChatbotWidget from '../components/ChatbotWidget.astro';
---

<Layout title="Page Not Found - Voice AI Agency">
  <Header />
  <main class="error-page">
    <div class="circuit-bg"></div>
    <div class="error-blob error-blob-1"></div>
    <div class="error-blob error-blob-2"></div>
    <div class="error-blob error-blob-3"></div>
    
    <div class="container error-content">
      <div class="error-visual animate-fade-in">
        <div class="error-code">
          <span class="digit">4</span>
          <span class="digit">0</span>
          <span class="digit">4</span>
        </div>
        <div class="error-glitch"></div>
      </div>
      
      <div class="error-text animate-fade-in" style="animation-delay: 300ms">
        <h1 class="error-title">
          Oops! Page <span class="neon-text">Not Found</span>
        </h1>
        <p class="error-description">
          The page you're looking for seems to have disappeared into the digital void. 
          Don't worry, our AI can help you find what you need!
        </p>
      </div>
      
      <div class="error-actions animate-fade-in" style="animation-delay: 600ms">
        <a href="/" class="btn btn-primary error-button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9,22 9,12 15,12 15,22"/>
          </svg>
          Go Home
        </a>
        
        <a href="/contact" class="btn btn-secondary error-button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          </svg>
          Contact Support
        </a>
        
        <a href="/features" class="btn btn-outline error-button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
            <path d="M12 17h.01"/>
          </svg>
          Explore Features
        </a>
      </div>
      
      <div class="helpful-links animate-fade-in" style="animation-delay: 900ms">
        <div class="links-section">
          <h3 class="links-title">Popular Pages</h3>
          <div class="links-grid">
            <a href="/about" class="helpful-link">
              <span class="link-icon">ðŸ‘¥</span>
              <span class="link-text">About Us</span>
            </a>
            <a href="/pricing" class="helpful-link">
              <span class="link-icon">ðŸ’°</span>
              <span class="link-text">Pricing</span>
            </a>
            <a href="/features" class="helpful-link">
              <span class="link-icon">âš¡</span>
              <span class="link-text">Features</span>
            </a>
            <a href="/booking" class="helpful-link">
              <span class="link-icon">ðŸ“…</span>
              <span class="link-text">Book a Call</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
  <ChatbotWidget />
</Layout>

<style>
  .error-page {
    min-height: calc(100vh - 120px);
    padding-top: 6rem;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    background: 
      radial-gradient(circle at 20% 30%, rgba(239, 68, 68, 0.1) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(0, 163, 255, 0.08) 0%, transparent 40%);
  }

  .error-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.1;
    z-index: -1;
    animation: blob-animation 20s infinite alternate ease-in-out;
  }

  .error-blob-1 {
    width: 300px;
    height: 300px;
    background: #ef4444;
    top: 10%;
    right: 10%;
    animation-delay: 0s;
  }

  .error-blob-2 {
    width: 400px;
    height: 400px;
    background: var(--color-neon-blue);
    bottom: 10%;
    left: 10%;
    animation-delay: 7s;
  }

  .error-blob-3 {
    width: 250px;
    height: 250px;
    background: var(--color-neon-cyan);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 14s;
  }

  .error-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Error Visual */
  .error-visual {
    position: relative;
    margin-bottom: 3rem;
  }

  .error-code {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .digit {
    font-size: 8rem;
    font-weight: 900;
    font-family: var(--font-heading);
    background: linear-gradient(135deg, var(--color-neon-blue), var(--color-neon-cyan));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 50px rgba(0, 163, 255, 0.5);
    animation: pulse-glow 2s infinite alternate;
    position: relative;
  }

  .digit:nth-child(2) {
    animation-delay: 0.5s;
  }

  .digit:nth-child(3) {
    animation-delay: 1s;
  }

  .error-glitch {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 0, 0, 0.1), transparent);
    animation: glitch 3s infinite;
    pointer-events: none;
  }

  /* Error Text */
  .error-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: var(--color-text);
    line-height: 1.2;
  }

  .error-description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Error Actions */
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }

  .error-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .error-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 163, 255, 0.3);
  }

  /* Helpful Links */
  .helpful-links {
    background: rgba(10, 14, 23, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  .links-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-text);
    text-align: center;
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .helpful-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .helpful-link:hover {
    background: rgba(0, 163, 255, 0.1);
    border-color: rgba(0, 163, 255, 0.3);
    color: var(--color-text);
    transform: translateY(-2px);
  }

  .link-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .link-text {
    font-weight: 500;
  }

  /* Animations */
  @keyframes blob-animation {
    0% {
      transform: translate(0, 0) scale(1) rotate(0deg);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1) rotate(120deg);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9) rotate(240deg);
    }
    100% {
      transform: translate(0, 0) scale(1) rotate(360deg);
    }
  }

  @keyframes pulse-glow {
    0% {
      text-shadow: 0 0 20px rgba(0, 163, 255, 0.5);
    }
    100% {
      text-shadow: 0 0 30px rgba(0, 163, 255, 0.8), 0 0 60px rgba(0, 163, 255, 0.4);
    }
  }

  @keyframes glitch {
    0%, 90%, 100% {
      transform: translateX(0);
      opacity: 0;
    }
    92% {
      transform: translateX(-2px);
      opacity: 0.3;
    }
    94% {
      transform: translateX(2px);
      opacity: 0.3;
    }
    96% {
      transform: translateX(-1px);
      opacity: 0.3;
    }
    98% {
      transform: translateX(1px);
      opacity: 0.3;
    }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .digit {
      font-size: 6rem;
    }

    .error-title {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .error-page {
      padding-top: 4rem;
    }

    .digit {
      font-size: 4rem;
    }

    .error-title {
      font-size: 2rem;
    }

    .error-description {
      font-size: 1.1rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }

    .error-button {
      width: 100%;
      max-width: 250px;
      justify-content: center;
    }

    .links-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .digit {
      font-size: 3rem;
    }

    .error-code {
      gap: 0.5rem;
    }

    .error-title {
      font-size: 1.75rem;
    }

    .error-description {
      font-size: 1rem;
    }

    .helpful-links {
      padding: 1.5rem;
    }

    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>