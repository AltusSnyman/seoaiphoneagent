---
import PageLayout from '../layouts/PageLayout.astro';
import PageHero from '../components/PageHero.astro';
import SectionHeading from '../components/SectionHeading.astro';
import Card from '../components/Card.astro';
import ServiceSchema from '../components/ServiceSchema.astro';
import OrganizationSchema from '../components/OrganizationSchema.astro';
import BreadcrumbSchema from '../components/BreadcrumbSchema.astro';

const includedFeatures = [
  {
    name: "Virtual Phone Receptionist",
    description: "24/7 call handling and routing",
    value: "$599/mo"
  },
  {
    name: "Automated Review Management", 
    description: "Actively collect and manage reviews",
    value: "$299/mo"
  },
  {
    name: "AI SMS Texting",
    description: "Two-way text communication", 
    value: "$499/mo"
  },
  {
    name: "Appointment Scheduling",
    description: "AI-powered calendar booking",
    value: "$399/mo"
  },
  {
    name: "Call Recording & Analysis",
    description: "Record and analyze all calls",
    value: "$299/mo"
  },
  {
    name: "Custom Voice Training",
    description: "Personalized AI voice training", 
    value: "$499/mo"
  }
];

const bonusFeatures = [
  {
    name: "Customer Relationship Management (CRM)",
    description: "Full-featured CRM system",
    value: "$499/mo"
  },
  {
    name: "SMS Marketing Tools",
    description: "Mass texting capabilities",
    value: "$299/mo"
  },
  {
    name: "Social Media Bot",
    description: "AI responses on social platforms",
    value: "$399/mo"
  },
  {
    name: "Mobile App Access",
    description: "Manage on the go",
    value: "$199/mo"
  }
];
---

<PageLayout 
  title="Simple, Powerful Pricing - Voice AI Agency"
  description="Incredible value for your business with our all-in-one Voice AI solution. Get enterprise-level phone handling for less than a part-time employee."
>
  <ServiceSchema
    serviceType="pricing"
    serviceName="AI Phone Agent Pricing Plans"
    description="Complete AI phone system solution with transparent pricing. Includes virtual receptionist, SMS automation, appointment booking, CRM, and more."
    serviceUrl="/pricing"
    serviceCategory="ProfessionalService"
    price={{
      value: 997,
      currency: "USD",
      per: "MONTH"
    }}
    features={[...includedFeatures.map(f => f.name), ...bonusFeatures.map(f => f.name)]}
    targetAudience="Small and Medium Businesses"
    availableHours="24/7"
  />
  
  <OrganizationSchema />
  
  <BreadcrumbSchema
    items={[
      { name: "Pricing", url: "https://aiphoneagent.ai/pricing" }
    ]}
  />
  
  <PageHero
    title="Simple, Powerful"
    highlightText="Pricing"
    subtitle="Incredible Value for Your Business"
  />

  <!-- Core Offer Section -->
  <section class="section-padding core-offer-section">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="container">
      <div class="offer-container animate-fade-in">
        <div class="offer-card glass-card">
          <!-- Header -->
          <div class="offer-header">
            <h2 class="offer-title">All-In-One Voice AI Solution</h2>
          </div>
          
          <!-- Content -->
          <div class="offer-content">
            <div class="offer-grid">
              <!-- Left Column - Features -->
              <div class="features-column">
                <h3 class="features-heading">
                  <span class="feature-dot"></span>
                  Included Features
                </h3>
                
                <ul class="features-list">
                  {includedFeatures.map((feature) => (
                    <li class="feature-item">
                      <svg class="feature-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 12l2 2 4-4"/>
                        <circle cx="12" cy="12" r="10"/>
                      </svg>
                      <div class="feature-content">
                        <div class="feature-name">{feature.name}</div>
                        <div class="feature-description">
                          <span>{feature.description}</span>
                          <span class="feature-value">{feature.value}</span>
                        </div>
                      </div>
                    </li>
                  ))}
                </ul>
                
                <h3 class="features-heading">
                  <span class="feature-dot"></span>
                  Bonus Tools
                </h3>
                
                <ul class="features-list">
                  {bonusFeatures.map((feature) => (
                    <li class="feature-item">
                      <svg class="feature-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 12l2 2 4-4"/>
                        <circle cx="12" cy="12" r="10"/>
                      </svg>
                      <div class="feature-content">
                        <div class="feature-name">{feature.name}</div>
                        <div class="feature-description">
                          <span>{feature.description}</span>
                          <span class="feature-value">{feature.value}</span>
                        </div>
                      </div>
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- Right Column - Pricing -->
              <div class="pricing-column">
                <div class="pricing-content">
                  <div class="total-value">
                    <div class="value-label">Total Value</div>
                    <div class="value-crossed">$4,389 / Month</div>
                  </div>
                  
                  <div class="price-box">
                    <div class="price-label">Your Price</div>
                    <div class="price-display">
                      <span class="price-amount neon-text">$499</span>
                      <span class="price-period">/ Month</span>
                    </div>
                    <div class="price-note">+ One-time setup fee</div>
                  </div>
                  
                  <div class="value-points glass-card">
                    <div class="points-title">Why This is Great Value:</div>
                    <ul class="points-list">
                      <li class="point-item">
                        <div class="point-dot"></div>
                        <span>Costs less than 1/6th of a human receptionist</span>
                      </li>
                      <li class="point-item">
                        <div class="point-dot"></div>
                        <span>Works 24/7/365 with no days off</span>
                      </li>
                      <li class="point-item">
                        <div class="point-dot"></div>
                        <span>Pays for itself by capturing just one missed opportunity</span>
                      </li>
                    </ul>
                  </div>
                </div>
                
                <div class="cta-container">
                  <a href="/booking" class="btn btn-primary cta-button">
                    Get Started Now (Book Your Free Strategy Call)
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <section class="section-padding faq-section">
    <div class="blob blob-3"></div>
    <div class="blob blob-4"></div>
    <div class="container">
      <SectionHeading 
        title="Frequently Asked Questions"
        subtitle="Everything you need to know about our pricing and service."
        centered={true}
      />
      
      <div class="faq-grid">
        <Card variant="default" delay={100}>
          <h3 class="faq-question">Is there a contract?</h3>
          <p class="faq-answer">
            No long-term contracts required. We offer month-to-month service, though many clients choose our annual 
            plan for additional savings.
          </p>
        </Card>
        
        <Card variant="default" delay={200}>
          <h3 class="faq-question">What's the setup fee?</h3>
          <p class="faq-answer">
            The one-time setup fee ranges from $499-$999 depending on customization needs. This covers AI voice training,
            system integration, and custom setup for your business.
          </p>
        </Card>
        
        <Card variant="default" delay={300}>
          <h3 class="faq-question">Can I upgrade my plan?</h3>
          <p class="faq-answer">
            Absolutely! As your business grows, you can easily upgrade to handle more call volume or add additional
            features like multi-location support.
          </p>
        </Card>
        
        <Card variant="default" delay={400}>
          <h3 class="faq-question">What's included in the price?</h3>
          <p class="faq-answer">
            Everything listed above! Your monthly fee includes the AI Phone Agent, all integrations, unlimited calls
            (within fair usage policy), all software updates, and technical support.
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="final-cta-section">
    <div class="blob blob-5"></div>
    <div class="blob blob-6"></div>
    <div class="circuit-bg"></div>
    <div class="container">
      <div class="cta-content animate-fade-in">
        <h2 class="cta-title">Stop losing leads. Start saving money.</h2>
        <p class="cta-subtitle">
          For less than the cost of a part-time employee, get a 24/7 solution that never calls in sick or takes vacation.
        </p>
        <a href="/booking" class="btn btn-primary cta-button">
          Book Your Free Strategy Call
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* Core Offer Section */
  .core-offer-section {
    background: var(--color-dark-300);
    position: relative;
    overflow: hidden;
  }

  .offer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .offer-card {
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(0, 163, 255, 0.3);
  }

  .offer-header {
    background: linear-gradient(135deg, rgba(0, 163, 255, 0.2) 0%, rgba(0, 229, 255, 0.2) 100%);
    padding: 2rem;
    border-bottom: 1px solid rgba(0, 163, 255, 0.3);
  }

  .offer-title {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    color: var(--color-text);
    margin: 0;
  }

  .offer-content {
    padding: 2rem;
  }

  .offer-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* Features Column */
  .features-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .features-heading {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .feature-dot {
    width: 8px;
    height: 8px;
    background: var(--color-neon-blue);
    border-radius: 50%;
    margin-right: 0.75rem;
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .feature-check {
    color: var(--color-neon-blue);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .feature-content {
    flex: 1;
  }

  .feature-name {
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .feature-description {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .feature-value {
    color: var(--color-neon-blue);
    margin-left: 0.75rem;
    font-weight: 500;
  }

  /* Pricing Column */
  .pricing-column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }

  .pricing-content {
    flex: 1;
  }

  .total-value {
    text-align: center;
    margin-bottom: 2rem;
  }

  .value-label {
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
  }

  .value-crossed {
    font-size: 1.5rem;
    text-decoration: line-through;
    color: var(--color-text-muted);
  }

  .price-box {
    background: rgba(0, 163, 255, 0.1);
    padding: 2rem;
    border-radius: 1rem;
    border: 1px solid rgba(0, 163, 255, 0.3);
    margin-bottom: 2rem;
    text-align: center;
  }

  .price-label {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .price-display {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
  }

  .price-amount {
    font-size: 3rem;
    font-weight: 700;
  }

  .price-period {
    color: var(--color-text-muted);
    margin-left: 0.5rem;
    font-size: 1.125rem;
  }

  .price-note {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .value-points {
    padding: 1.5rem;
    border-radius: 1rem;
    margin-bottom: 2rem;
  }

  .points-title {
    font-weight: 500;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .points-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .point-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .point-dot {
    width: 6px;
    height: 6px;
    background: var(--color-neon-blue);
    border-radius: 50%;
    margin-top: 0.5rem;
    flex-shrink: 0;
  }

  .point-item span {
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .cta-container {
    text-align: center;
  }

  .cta-button {
    width: 100%;
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }

  /* FAQ Section */
  .faq-section {
    background: var(--color-dark-400);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .faq-question {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .faq-answer {
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  /* Final CTA Section */
  .final-cta-section {
    padding: 5rem 0;
    position: relative;
    background: linear-gradient(to bottom, var(--color-dark-400), var(--color-dark-300));
  }

  .cta-content {
    text-align: center;
    position: relative;
    z-index: 10;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .cta-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .cta-button {
    font-size: 1.125rem;
    padding: 1rem 2rem;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .offer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .offer-title {
      font-size: 1.75rem;
    }

    .price-amount {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .offer-content {
      padding: 1.5rem;
    }

    .offer-header {
      padding: 1.5rem;
    }

    .offer-title {
      font-size: 1.5rem;
    }

    .feature-description {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .feature-value {
      margin-left: 0;
    }

    .price-amount {
      font-size: 2rem;
    }

    .cta-title {
      font-size: 2rem;
    }

    .cta-subtitle {
      font-size: 1.1rem;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>