---
export interface LinkItem {
  title: string;
  href: string;
  description: string;
  category?: string;
  icon?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  links: LinkItem[];
  columns?: number;
  showCategory?: boolean;
  variant?: 'default' | 'minimal' | 'featured';
}

const { 
  title = "Related Resources", 
  subtitle, 
  links = [], 
  columns = 3,
  showCategory = false,
  variant = 'default'
} = Astro.props;
---

<section class={`internal-links ${variant}`}>
  <div class="container">
    {title && (
      <div class="section-header">
        <h2 class="section-title">{title}</h2>
        {subtitle && <p class="section-subtitle">{subtitle}</p>}
      </div>
    )}
    
    <div class={`links-grid columns-${columns}`}>
      {links.map((link) => (
        <a href={link.href} class="link-card">
          {link.icon && <span class="link-icon">{link.icon}</span>}
          <div class="link-content">
            {link.category && showCategory && (
              <span class="link-category">{link.category}</span>
            )}
            <h3 class="link-title">{link.title}</h3>
            <p class="link-description">{link.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .internal-links {
    padding: 3rem 0;
    background: var(--color-dark-300);
    position: relative;
  }
  
  .internal-links.minimal {
    padding: 2rem 0;
    background: transparent;
  }
  
  .internal-links.featured {
    padding: 4rem 0;
    background: linear-gradient(135deg, rgba(6, 10, 18, 0.95), rgba(10, 14, 23, 0.9));
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .links-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .links-grid.columns-2 {
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  }

  .links-grid.columns-3 {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .links-grid.columns-4 {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .link-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(0, 163, 255, 0.1);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;
  }

  .link-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--color-neon-blue), var(--color-neon-cyan));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .link-card:hover {
    transform: translateY(-4px);
    background: rgba(0, 163, 255, 0.05);
    border-color: rgba(0, 163, 255, 0.3);
    box-shadow: 0 8px 32px rgba(0, 163, 255, 0.1);
  }

  .link-card:hover::before {
    opacity: 1;
  }

  .link-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    display: block;
  }

  .link-category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-neon-blue);
    background: rgba(0, 163, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .link-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .link-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    flex: 1;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .links-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .section-title {
      font-size: 1.875rem;
    }

    .internal-links {
      padding: 2rem 0;
    }

    .internal-links.featured {
      padding: 3rem 0;
    }
  }
</style>