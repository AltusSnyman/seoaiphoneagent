---
export interface Props {
  showTitle?: boolean;
  variant?: 'cards' | 'list' | 'banner';
  className?: string;
}

const { showTitle = true, variant = 'cards', className = '' } = Astro.props;

const guarantees = [
  {
    name: "99.9% Uptime Guarantee",
    description: "Enterprise-grade reliability with service level agreements. Our redundant infrastructure ensures your AI phone agent is always available when customers call.",
