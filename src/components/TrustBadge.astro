---
export interface Props {
  type: 'certification' | 'guarantee' | 'rating' | 'experience';
  name: string;
  value?: string;
  icon: string;
  verified?: boolean;
  size?: 'small' | 'medium' | 'large';
  className?: string;
}

const { 
  type, 
  name, 
  value, 
  icon, 
  verified = false, 
  size = 'medium', 
  className = '' 
} = Astro.props;
---

<div class={`trust-badge trust-badge--${type} trust-badge--${size} ${className}`}>
  <span class="badge-icon">{icon}</span>
  <div class="badge-content">
    <span class="badge-name">{name}</span>
    {value && <span class="badge-value">{value}</span>}
  </div>
  {verified && <span class="verified-indicator">âœ“</span>}
</div>

<style>
  .trust-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(0, 163, 255, 0.1);
    border: 1px solid rgba(0, 163, 255, 0.2);
    border-radius: 6px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .trust-badge::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .trust-badge:hover::before {
    transform: translateX(100%);
  }

  .badge-icon {
    font-size: 1rem;
    flex-shrink: 0;
  }

  .badge-content {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .badge-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.2;
  }

  .badge-value {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-neon-blue);
    line-height: 1;
  }

  .verified-indicator {
    background: #00D4AA;
    color: white;
    font-size: 0.625rem;
    font-weight: 700;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: -4px;
    right: -4px;
    box-shadow: 0 2px 4px rgba(0, 212, 170, 0.3);
  }

  /* Type-specific styling */
  .trust-badge--certification {
    border-color: rgba(0, 163, 255, 0.3);
    background: rgba(0, 163, 255, 0.1);
  }

  .trust-badge--guarantee {
    border-color: rgba(0, 212, 170, 0.3);
    background: rgba(0, 212, 170, 0.1);
  }

  .trust-badge--rating {
    border-color: rgba(255, 193, 7, 0.3);
    background: rgba(255, 193, 7, 0.1);
  }

  .trust-badge--experience {
    border-color: rgba(108, 117, 125, 0.3);
    background: rgba(108, 117, 125, 0.1);
  }

  /* Size variations */
  .trust-badge--small {
    padding: 0.375rem 0.5rem;
    gap: 0.375rem;
  }

  .trust-badge--small .badge-icon {
    font-size: 0.875rem;
  }

  .trust-badge--small .badge-name {
    font-size: 0.625rem;
  }

  .trust-badge--small .badge-value {
    font-size: 0.75rem;
  }

  .trust-badge--large {
    padding: 0.75rem 1rem;
    gap: 0.75rem;
  }

  .trust-badge--large .badge-icon {
    font-size: 1.25rem;
  }

  .trust-badge--large .badge-name {
    font-size: 0.875rem;
  }

  .trust-badge--large .badge-value {
    font-size: 1rem;
  }

  /* Hover effects */
  .trust-badge:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 163, 255, 0.15);
  }

  .trust-badge--guarantee:hover {
    box-shadow: 0 4px 12px rgba(0, 212, 170, 0.15);
  }

  .trust-badge--rating:hover {
    box-shadow: 0 4px 12px rgba(255, 193, 7, 0.15);
  }

  @media (max-width: 480px) {
    .trust-badge {
      padding: 0.5rem;
      gap: 0.5rem;
    }

    .badge-name {
      font-size: 0.7rem;
    }

    .badge-value {
      font-size: 0.8rem;
    }
  }
</style>