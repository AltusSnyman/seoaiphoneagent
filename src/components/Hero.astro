<section class="hero section-padding">
	<div class="circuit-bg"></div>
	<div class="blob blob-1"></div>
	<div class="blob blob-2"></div>
	
	<div class="container hero-content">
		<div class="hero-grid">
			<div class="hero-text">
				<h1 class="hero-title animate-fade-in">
					Stop Missing Leads.<br>
					<span class="neon-text">Start Growing 24/7.</span>
				</h1>
				
				<p class="hero-subtitle animate-fade-in">
					Say Goodbye to Missed Calls, Frustrated Clients, and Low Google Reviews! 
					AI Agents, the Smartest Way to Grow Your Business Without Adding Stress.
				</p>
				
				<div class="hero-buttons animate-fade-in">
					<a href="/booking" class="btn btn-primary">Book Your Free Strategy Call</a>
					<a href="#problem" class="btn btn-secondary">See How It Works</a>
				</div>
			</div>
			
			<div class="hero-visual">
				<div class="modern-visual-container">
					<div class="particle-field">
						<div class="particle" style="--delay: 0s; --x: 10%; --y: 20%;"></div>
						<div class="particle" style="--delay: 1s; --x: 80%; --y: 30%;"></div>
						<div class="particle" style="--delay: 2s; --x: 60%; --y: 70%;"></div>
						<div class="particle" style="--delay: 0.5s; --x: 30%; --y: 80%;"></div>
						<div class="particle" style="--delay: 1.5s; --x: 90%; --y: 60%;"></div>
						<div class="particle" style="--delay: 2.5s; --x: 20%; --y: 40%;"></div>
					</div>
					
					<div class="geometric-shapes">
						<div class="shape hexagon"></div>
						<div class="shape triangle"></div>
						<div class="shape square"></div>
						<div class="shape circle"></div>
					</div>
					
					<div class="neural-network">
						<div class="node node-1"></div>
						<div class="node node-2"></div>
						<div class="node node-3"></div>
						<div class="node node-4"></div>
						<div class="node node-5"></div>
						<div class="connection con-1"></div>
						<div class="connection con-2"></div>
						<div class="connection con-3"></div>
						<div class="connection con-4"></div>
					</div>
					
					<div class="central-orb">
						<div class="orb-core"></div>
						<div class="orb-rings">
							<div class="ring ring-1"></div>
							<div class="ring ring-2"></div>
						</div>
						<div class="energy-waves">
							<div class="wave"></div>
							<div class="wave"></div>
							<div class="wave"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		padding-top: 6rem;
		position: relative;
		overflow: hidden;
		background: 
			radial-gradient(circle at 20% 50%, rgba(0, 163, 255, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(0, 229, 255, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 40% 80%, rgba(0, 163, 255, 0.05) 0%, transparent 50%);
	}

	.blob-1 {
		width: 400px;
		height: 400px;
		background: var(--color-neon-blue);
		top: -200px;
		right: -100px;
	}

	.blob-2 {
		width: 350px;
		height: 350px;
		background: var(--color-neon-cyan);
		bottom: -150px;
		left: -100px;
	}

	.hero-content {
		position: relative;
		z-index: 10;
	}

	.hero-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.hero-title {
		font-size: 3.5rem;
		line-height: 1.2;
		margin-bottom: 1.5rem;
		font-weight: 800;
	}

	.hero-subtitle {
		font-size: 1.25rem;
		color: var(--color-text-muted);
		margin-bottom: 2rem;
		max-width: 540px;
		line-height: 1.8;
	}

	.hero-buttons {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		height: 500px;
		perspective: 1000px;
	}

	.modern-visual-container {
		width: 450px;
		height: 450px;
		position: relative;
		animation: float 8s ease-in-out infinite;
		transform-style: preserve-3d;
	}

	@keyframes float {
		0%, 100% { transform: translateY(0) rotateX(0deg); }
		33% { transform: translateY(-10px) rotateX(5deg); }
		66% { transform: translateY(-5px) rotateX(-3deg); }
	}

	/* Particle Field */
	.particle-field {
		position: absolute;
		inset: 0;
		overflow: hidden;
		border-radius: 50%;
	}

	.particle {
		position: absolute;
		width: 4px;
		height: 4px;
		background: var(--color-neon-cyan);
		border-radius: 50%;
		box-shadow: 0 0 10px var(--color-neon-cyan);
		left: var(--x);
		top: var(--y);
		animation: particleFloat 4s ease-in-out infinite var(--delay);
	}

	@keyframes particleFloat {
		0%, 100% { 
			opacity: 0.3; 
			transform: translate(0, 0) scale(0.5);
		}
		50% { 
			opacity: 1; 
			transform: translate(10px, -15px) scale(1.2);
		}
	}

	/* Geometric Shapes */
	.geometric-shapes {
		position: absolute;
		inset: 50px;
	}

	.shape {
		position: absolute;
		border: 2px solid var(--color-neon-blue);
		opacity: 0.4;
	}

	.hexagon {
		width: 60px;
		height: 52px;
		background: transparent;
		position: relative;
		top: 20%;
		left: 70%;
		animation: rotateGeometric 12s linear infinite;
		clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
	}

	.triangle {
		width: 0;
		height: 0;
		border-left: 25px solid transparent;
		border-right: 25px solid transparent;
		border-bottom: 43px solid var(--color-neon-cyan);
		opacity: 0.3;
		position: absolute;
		top: 60%;
		left: 10%;
		animation: rotateGeometric 15s linear infinite reverse;
	}

	.square {
		width: 40px;
		height: 40px;
		border: 2px solid var(--color-neon-blue);
		position: absolute;
		top: 10%;
		left: 20%;
		animation: rotateGeometric 10s linear infinite;
		transform-origin: center;
	}

	.circle {
		width: 30px;
		height: 30px;
		border: 2px solid var(--color-neon-cyan);
		border-radius: 50%;
		position: absolute;
		top: 80%;
		left: 60%;
		animation: pulse 3s ease-in-out infinite;
	}

	@keyframes rotateGeometric {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	/* Neural Network */
	.neural-network {
		position: absolute;
		inset: 80px;
		opacity: 0.6;
	}

	.node {
		position: absolute;
		width: 12px;
		height: 12px;
		background: var(--color-neon-blue);
		border-radius: 50%;
		box-shadow: 0 0 15px var(--color-neon-blue);
		animation: nodePulse 2s ease-in-out infinite;
	}

	.node-1 { top: 20%; left: 30%; animation-delay: 0s; }
	.node-2 { top: 40%; left: 70%; animation-delay: 0.4s; }
	.node-3 { top: 70%; left: 50%; animation-delay: 0.8s; }
	.node-4 { top: 60%; left: 20%; animation-delay: 1.2s; }
	.node-5 { top: 30%; left: 80%; animation-delay: 1.6s; }

	@keyframes nodePulse {
		0%, 100% { opacity: 0.4; transform: scale(1); }
		50% { opacity: 1; transform: scale(1.3); }
	}

	.connection {
		position: absolute;
		height: 1px;
		background: linear-gradient(90deg, var(--color-neon-blue), transparent);
		opacity: 0.3;
		animation: connectionFlow 3s ease-in-out infinite;
	}

	.con-1 {
		top: 25%;
		left: 32%;
		width: 35%;
		transform: rotate(25deg);
		animation-delay: 0s;
	}

	.con-2 {
		top: 45%;
		left: 45%;
		width: 25%;
		transform: rotate(-30deg);
		animation-delay: 0.5s;
	}

	.con-3 {
		top: 65%;
		left: 25%;
		width: 30%;
		transform: rotate(45deg);
		animation-delay: 1s;
	}

	.con-4 {
		top: 35%;
		left: 60%;
		width: 20%;
		transform: rotate(-60deg);
		animation-delay: 1.5s;
	}

	@keyframes connectionFlow {
		0%, 100% { opacity: 0.1; }
		50% { opacity: 0.8; }
	}

	/* Central Orb */
	.central-orb {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 120px;
		height: 120px;
	}

	.orb-core {
		position: absolute;
		inset: 20px;
		background: radial-gradient(circle at 30% 30%, var(--color-neon-cyan), var(--color-neon-blue));
		border-radius: 50%;
		box-shadow: 
			0 0 40px var(--color-neon-blue),
			inset 0 0 40px rgba(0, 163, 255, 0.3);
		animation: coreRotate 20s linear infinite;
	}

	@keyframes coreRotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	.orb-rings {
		position: absolute;
		inset: 0;
	}

	.ring {
		position: absolute;
		border: 1px solid var(--color-neon-blue);
		border-radius: 50%;
		opacity: 0.5;
	}

	.ring-1 {
		inset: 0px;
		animation: rotate 25s linear infinite;
		border-width: 2px;
	}

	.ring-2 {
		inset: -15px;
		animation: rotate 18s linear infinite reverse;
		border-color: var(--color-neon-cyan);
		opacity: 0.3;
	}

	/* Energy Waves */
	.energy-waves {
		position: absolute;
		inset: -30px;
	}

	.wave {
		position: absolute;
		inset: 0;
		border: 1px solid var(--color-neon-cyan);
		border-radius: 50%;
		opacity: 0;
		animation: waveExpand 4s ease-out infinite;
	}

	.wave:nth-child(2) { animation-delay: 1.3s; }
	.wave:nth-child(3) { animation-delay: 2.6s; }

	@keyframes waveExpand {
		0% {
			opacity: 0.8;
			transform: scale(0.5);
		}
		100% {
			opacity: 0;
			transform: scale(2);
		}
	}

	@keyframes rotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	@keyframes pulse {
		0%, 100% { 
			opacity: 0.4; 
			transform: scale(1);
			box-shadow: 0 0 10px var(--color-neon-blue);
		}
		50% { 
			opacity: 1; 
			transform: scale(1.1);
			box-shadow: 0 0 25px var(--color-neon-blue);
		}
	}

	@media (max-width: 1024px) {
		.hero-grid {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.hero-text {
			order: 2;
		}

		.hero-visual {
			order: 1;
			margin-bottom: 2rem;
		}

		.modern-visual-container {
			width: 350px;
			height: 350px;
		}
		
		.hero-visual {
			height: 400px;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			margin: 0 auto 2rem;
		}

		.hero-buttons {
			justify-content: center;
		}
	}

	@media (max-width: 640px) {
		.hero-title {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.modern-visual-container {
			width: 280px;
			height: 280px;
		}
		
		.hero-visual {
			height: 320px;
		}
	}
</style>