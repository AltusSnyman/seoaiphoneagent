---
export interface Props {
  showTitle?: boolean;
  variant?: 'detailed' | 'badges' | 'minimal';
  className?: string;
}

const { showTitle = true, variant = 'detailed', className = '' } = Astro.props;

const securityFeatures = [
  {
    name: "HIPAA Compliant",
    description: "Full compliance with healthcare privacy regulations for medical practices, dental offices, and healthcare providers.",
    icon: "üè•",
    certified: true,
    details: "Protected Health Information (PHI) secure handling and storage"
  },
  {
    name: "SOC 2 Type II",
    description: "Comprehensive security, availability, processing integrity, confidentiality, and privacy controls.",
    icon: "üõ°Ô∏è",
    certified: true,
    details: "Annual third-party audits verify security controls"
  },
  {
    name: "GDPR Compliant",
    description: "European Union General Data Protection Regulation compliance for international customers.",
    icon: "üåç",
    certified: true,
    details: "Data subject rights and consent management"
  },
  {
    name: "End-to-End Encryption",
    description: "All voice calls and data transmissions secured with military-grade encryption protocols.",
    icon: "üîê",
    certified: false,
    details: "AES-256 encryption for data at rest and in transit"
  },
  {
    name: "ISO 27001",
    description: "International standard for information security management systems and best practices.",
    icon: "üìã",
    certified: true,
    details: "Comprehensive information security framework"
  },
  {
    name: "PCI DSS Level 1",
    description: "Payment Card Industry Data Security Standard for secure payment processing.",
    icon: "üí≥",
    certified: true,
    details: "Secure handling of credit card information"
  }
];

const guarantees = [
  {
    name: "99.9% Uptime SLA",
    description: "Service level agreement with guaranteed uptime and performance standards.",
    icon: "‚ö°",
    value: "99.9%"
  },
  {
    name: "30-Day Money Back",
    description: "Full refund guarantee if not completely satisfied with our service.",
    icon: "üí∞",
    value: "30 Days"
  },
  {
    name: "Data Retention Control",
    description: "Complete control over your data with flexible retention and deletion policies.",
    icon: "üóÉÔ∏è",
    value: "Full Control"
  },
  {
    name: "Disaster Recovery",
    description: "Comprehensive backup and recovery systems with multiple data centers.",
    icon: "üîÑ",
    value: "Multi-Zone"
  }
];
---

<section class={`security-compliance ${className}`}>
  {showTitle && (
    <div class="section-header">
      <h2 class="section-title">Enterprise Security & Compliance</h2>
      <p class="section-subtitle">
        Your business data and customer information protected by industry-leading security standards and certifications.
      </p>
    </div>
  )}

  {variant === 'detailed' && (
    <div class="security-grid">
      <div class="security-column">
        <h3 class="column-title">
          <span class="column-icon">üîí</span>
          Security Certifications
        </h3>
        <div class="feature-list">
          {securityFeatures.map((feature) => (
            <div class="security-item">
              <div class="item-header">
                <span class="item-icon">{feature.icon}</span>
                <div class="item-title-group">
                  <h4 class="item-title">{feature.name}</h4>
                  {feature.certified && <span class="certified-badge">‚úì Certified</span>}
                </div>
              </div>
              <p class="item-description">{feature.description}</p>
              <p class="item-details">{feature.details}</p>
            </div>
          ))}
        </div>
      </div>

      <div class="security-column">
        <h3 class="column-title">
          <span class="column-icon">üõ°Ô∏è</span>
          Service Guarantees
        </h3>
        <div class="feature-list">
          {guarantees.map((guarantee) => (
            <div class="guarantee-item">
              <div class="item-header">
                <span class="item-icon">{guarantee.icon}</span>
                <div class="item-title-group">
                  <h4 class="item-title">{guarantee.name}</h4>
                  <span class="guarantee-value">{guarantee.value}</span>
                </div>
              </div>
              <p class="item-description">{guarantee.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  )}

  {variant === 'badges' && (
    <div class="security-badges">
      {securityFeatures.slice(0, 6).map((feature) => (
        <div class="security-badge">
          <span class="badge-icon">{feature.icon}</span>
          <div class="badge-content">
            <span class="badge-name">{feature.name}</span>
            {feature.certified && <span class="badge-status">Certified</span>}
          </div>
        </div>
      ))}
    </div>
  )}

  {variant === 'minimal' && (
    <div class="security-minimal">
      <div class="minimal-item">
        <span class="minimal-icon">üîí</span>
        <span class="minimal-text">HIPAA & SOC 2 Certified</span>
      </div>
      <div class="minimal-item">
        <span class="minimal-icon">‚ö°</span>
        <span class="minimal-text">99.9% Uptime SLA</span>
      </div>
      <div class="minimal-item">
        <span class="minimal-icon">üõ°Ô∏è</span>
        <span class="minimal-text">End-to-End Encryption</span>
      </div>
    </div>
  )}
</section>

<style>
  .security-compliance {
    --security-primary: #00D4AA;
    --security-danger: #DC3545;
    --security-warning: #FFC107;
    --security-info: var(--color-neon-blue);
    --security-bg: rgba(0, 212, 170, 0.05);
    --security-border: rgba(0, 212, 170, 0.2);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Detailed Layout */
  .security-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-top: 2rem;
  }

  .security-column {
    background: var(--security-bg);
    border: 1px solid var(--security-border);
    border-radius: 12px;
    padding: 2rem;
  }

  .column-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 2rem;
    border-bottom: 2px solid var(--security-primary);
    padding-bottom: 1rem;
  }

  .column-icon {
    font-size: 1.75rem;
  }

  .feature-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .security-item,
  .guarantee-item {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .security-item:hover,
  .guarantee-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--security-primary);
    transform: translateY(-2px);
  }

  .item-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .item-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .item-title-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .item-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .certified-badge {
    background: var(--security-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    align-self: flex-start;
  }

  .guarantee-value {
    background: var(--security-info);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    align-self: flex-start;
  }

  .item-description {
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .item-details {
    color: var(--color-text-muted);
    font-size: 0.8rem;
    font-style: italic;
    margin: 0;
  }

  /* Badge Layout */
  .security-badges {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .security-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: var(--security-bg);
    border: 1px solid var(--security-border);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .security-badge:hover {
    background: rgba(0, 212, 170, 0.1);
    border-color: var(--security-primary);
    transform: translateY(-2px);
  }

  .badge-icon {
    font-size: 1.5rem;
  }

  .badge-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .badge-name {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.9rem;
  }

  .badge-status {
    color: var(--security-primary);
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Minimal Layout */
  .security-minimal {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
    align-items: center;
  }

  .minimal-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--security-bg);
    border: 1px solid var(--security-border);
    border-radius: 6px;
  }

  .minimal-icon {
    font-size: 1.25rem;
  }

  .minimal-text {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.875rem;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .security-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .section-title {
      font-size: 2rem;
    }
  }

  @media (max-width: 768px) {
    .security-column {
      padding: 1.5rem;
    }

    .column-title {
      font-size: 1.25rem;
    }

    .security-badges {
      grid-template-columns: 1fr;
    }

    .security-minimal {
      flex-direction: column;
      text-align: center;
    }
  }
</style>