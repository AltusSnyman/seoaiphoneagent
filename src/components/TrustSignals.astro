<style>
  .trust-signals {
    --trust-primary: var(--color-neon-blue);
    --trust-success: #00D4AA;
    --trust-bg: rgba(0, 163, 255, 0.05);
    --trust-border: rgba(0, 163, 255, 0.2);
  }

  /* Grid Layout */
  .trust-signals--grid {
    background: var(--trust-bg);
    border: 1px solid var(--trust-border);
    border-radius: 12px;
    padding: 2rem;
  }

  .trust-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .trust-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .trust-section-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    border-bottom: 2px solid var(--trust-primary);
    padding-bottom: 0.5rem;
  }

  .trust-items {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  /* Horizontal Layout */
  .trust-horizontal {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    background: var(--trust-bg);
    border: 1px solid var(--trust-border);
    border-radius: 8px;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    white-space: nowrap;
  }

  /* Inline Layout */
  .trust-inline {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
  }

  .trust-inline .trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  /* Vertical Layout */
  .trust-vertical {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .trust-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .trust-group-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--trust-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Common Elements */
  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    position: relative;
  }

  .trust-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .trust-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .trust-name {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.875rem;
  }

  .trust-description {
    color: var(--color-text-muted);
    font-size: 0.75rem;
    line-height: 1.4;
  }

  .trust-value {
    font-weight: 700;
    color: var(--trust-primary);
    font-size: 1rem;
  }

  .trust-text {
    color: var(--color-text);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .verified-badge {
    background: var(--trust-success);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    margin-left: auto;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .trust-grid {
      grid-template-columns: 1fr;
    }

    .trust-horizontal {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .trust-badge {
      justify-content: center;
      min-width: 200px;
    }

    .trust-inline {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .trust-horizontal {
      padding: 1rem;
    }

    .trust-badge {
      min-width: 100%;
      justify-content: center;
    }

    .trust-inline {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>