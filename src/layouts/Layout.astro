					loadCSS('https://fonts.googleapis.com/css2?family=Inter:wght@300;500&family=Montserrat:wght@400;500;600&display=swap&subset=latin');
					
					// Initialize interaction optimizations
					optimizeInteractivity();
					
					// Progressive image loading for below-the-fold content
					if ('IntersectionObserver' in window) {
						var imageObserver = new IntersectionObserver(function(entries, observer) {
							entries.forEach(function(entry) {
								if (entry.isIntersecting) {
									var img = entry.target;
									if (img.dataset.src) {
										img.src = img.dataset.src;
										img.classList.add('loaded');
										observer.unobserve(img);
									}
								}
							});
						}, {
							rootMargin: '50px'
						});
						
						// Observe all lazy-loaded images
						var lazyImages = document.querySelectorAll('img[data-src]');
						lazyImages.forEach(function(img) {
							imageObserver.observe(img);
						});
					}
				});
			}
			
			// Early interaction readiness - improve FID
