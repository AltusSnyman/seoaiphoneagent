		<slot />
		
		<!-- Load Non-Critical CSS Asynchronously -->
		<script>
			// Load non-critical CSS after critical rendering
			function loadCSS(href) {
				var link = document.createElement('link');
				link.rel = 'stylesheet';
				link.href = href;
				link.media = 'print';
				link.onload = function() { this.media = 'all'; };
				document.head.appendChild(link);
			}
			
			// Load non-critical fonts and styles after page load
			if (window.addEventListener) {
				window.addEventListener('load', function() {
					// Load remaining font weights
					loadCSS('https://fonts.googleapis.com/css2?family=Inter:wght@300;500&family=Montserrat:wght@400;500;600&display=swap');
				});
			}
		</script>
	</body>
