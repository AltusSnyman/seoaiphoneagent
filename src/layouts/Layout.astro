		box-shadow: 0 0 20px rgba(0, 163, 255, 0.5);
		transform: translateY(-2px);
	}

	/* Blob Animation - Non-critical */
	@keyframes blob-animation {
		0% { transform: translate(0, 0) scale(1); }
		33% { transform: translate(30px, -50px) scale(1.1); }
		66% { transform: translate(-20px, 20px) scale(0.9); }
		100% { transform: translate(0, 0) scale(1); }
	}

	.blob {
		border-radius: 50%;
		filter: blur(60px);
		opacity: 0.15;
		position: absolute;
		z-index: -1;
		animation: blob-animation 15s infinite alternate ease-in-out;
	}

	/* Circuit Background - Non-critical */
	.circuit-bg {
		background-color: var(--color-dark-400);
		background-image: radial-gradient(var(--color-neon-blue) 0.5px, transparent 0.5px), radial-gradient(var(--color-neon-blue) 0.5px, var(--color-dark-400) 0.5px);
		background-size: 20px 20px;
		background-position: 0 0, 10px 10px;
		background-attachment: fixed;
		opacity: 0.05;
		position: absolute;
		inset: 0;
		z-index: -1;
	}
</style>