					// Measure LCP (Largest Contentful Paint)
					if ('PerformanceObserver' in window) {
						try {
							var lcpObserver = new PerformanceObserver(function(entryList) {
								var entries = entryList.getEntries();
								var lastEntry = entries[entries.length - 1];
