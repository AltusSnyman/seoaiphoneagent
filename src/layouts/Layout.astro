					}, passiveOptions);
				});
				
				// Preload critical interactive components with requestIdleCallback
				if ('requestIdleCallback' in window) {
					requestIdleCallback(function() {
						// Pre-warm form handlers and interactive elements
						var forms = document.querySelectorAll('form');
