---
export interface Props {
	title: string;
	description: string;
	keywords: string;
	industry: string;
	heroTitle: string;
	heroSubtitle: string;
	dreamOutcome: string;
	dreamOutcomeTitle?: string;
	painPoints: Array<{
		title: string;
		description: string;
		cost: string;
		icon: string;
	}>;
	benefits: Array<{
		title: string;
		description: string;
		icon: string;
	}>;
	caseStudies: Array<{
		title: string;
		scenario: string;
		solution: string;
		result: string;
	}>;
	testimonial: {
		name: string;
		title: string;
		quote: string;
		image: string;
		revenue: string;
		timeframe: string;
	};
	roiData: {
		avgCallValue: number;
		missedCallsPerMonth: number;
		aiCost: number;
		breakEvenCalls: number;
	};
}

const { 
	title, 
	description, 
	keywords,
	industry,
	heroTitle,
	heroSubtitle,
	dreamOutcome,
	dreamOutcomeTitle = "What Your Business Deserves",
	painPoints,
	benefits,
	caseStudies,
	testimonial,
	roiData
} = Astro.props;

import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ChatbotWidget from '../components/ChatbotWidget.astro';
import IndustrySchema from '../components/IndustrySchema.astro';
import ServiceSchema from '../components/ServiceSchema.astro';
import RelatedContent from '../components/RelatedContent.astro';

// Generate industry-specific data for schema
const industryKeywords = [
	`${industry} Business`,
	'AI Phone Agent',
	'Virtual Receptionist',
	'Call Answering Service',
	'Appointment Booking',
	'Customer Service Automation',
	`${industry} Services`,
	'Business Process Outsourcing'
];

const specificServices = [
	`${industry}-Specific Call Handling`,
	'Emergency Call Prioritization',
	'Appointment Scheduling',
	'Customer Service Automation',
	'Lead Qualification',
	'Call Analytics & Reporting'
];

// Map industry to target audience
const getTargetAudience = (industry: string) => {
	const audienceMap: Record<string, string> = {
		'Electrical': 'Electrical Contractors',
		'Plumbing': 'Plumbing Contractors', 
		'Dental': 'Dental Practices',
		'Medical': 'Medical Practices',
		'Real Estate': 'Real Estate Agencies',
		'Legal Services': 'Legal Practices',
		'HVAC': 'HVAC Contractors',
		'Auto Repair': 'Automotive Service Centers',
		'Roofing': 'Roofing Contractors',
		'Pest Control': 'Pest Control Services',
		'Landscaping': 'Landscape Companies',
		'Cleaning Services': 'Commercial Cleaning Companies',
		'Beauty & Wellness': 'Salons and Spas',
		'Restaurant': 'Restaurant Owners',
		'Construction': 'General Contractors'
	};
	return audienceMap[industry] || `${industry} Businesses`;
};

// Generate related content based on industry
const getRelatedContent = (industry: string) => {
	const baseContent = [
		{
			title: "United States Services",
			href: "/locations/usa",
			type: "location" as const,
			description: "Professional AI phone agents serving American businesses nationwide with local expertise."
		},
		{
			title: "Emergency Call Handling",
			href: "/blog/emergency-call-handling-ai",
			type: "guide" as const,
			description: "Master emergency call management with AI protocols and best practices for critical situations."
		},
		{
			title: "Business Phone Automation",
			href: "/blog/business-phone-automation-guide",
			type: "guide" as const,
			description: "Complete implementation guide for transforming your communications with AI automation."
		},
		{
			title: "AI vs Human Receptionist",
			href: "/blog/ai-receptionist-vs-human",
			type: "blog" as const,
			description: "Comprehensive cost analysis and decision guide for choosing AI or human reception staff."
		}
	];

	// Add industry-specific related content
	const industrySpecific = getIndustryRelatedContent(industry);
	
	return [...industrySpecific, ...baseContent].slice(0, 6);
};

const getIndustryRelatedContent = (industry: string) => {
	const industryMap: Record<string, Array<{title: string, href: string, type: "industry" | "location" | "blog" | "service" | "guide", description: string}>> = {
		'Dental': [
			{
				title: "Medical Clinics AI Phone",
				href: "/industries/medical-clinics", 
				type: "industry",
				description: "Specialized AI phone solutions for medical practices and healthcare providers."
			},
			{
				title: "Emergency Call Protocols",
				href: "/blog/emergency-call-handling-ai",
				type: "guide", 
				description: "Essential protocols for handling dental emergencies with AI phone agents."
			}
		],
		'Medical': [
			{
				title: "For Dentists",
				href: "/industries/dentists",
				type: "industry",
				description: "Specialized AI phone systems designed specifically for dental practices and patient care."
			},
			{
				title: "Legal Offices",
				href: "/industries/legal-offices",
				type: "industry", 
				description: "Professional AI phone solutions for law firms and legal practices."
			}
		],
		'Plumbing': [
			{
				title: "HVAC Contractors",
				href: "/industries/hvac",
				type: "industry",
				description: "AI phone agents specifically designed for heating, cooling, and ventilation contractors."
			},
			{
				title: "Electricians",
				href: "/industries/electricians", 
				type: "industry",
				description: "Professional AI phone solutions for electrical contractors and service providers."
			}
		],
		'HVAC': [
			{
				title: "For Plumbers", 
				href: "/industries/plumbers",
				type: "industry",
				description: "AI phone systems designed for plumbing contractors and emergency service calls."
			},
			{
				title: "Roofers",
				href: "/industries/roofers",
				type: "industry",
				description: "Specialized AI phone agents for roofing contractors and storm damage services."
			}
		],
		'Real Estate': [
			{
				title: "Legal Offices",
				href: "/industries/legal-offices", 
				type: "industry",
				description: "AI phone solutions for law firms handling real estate transactions and legal matters."
			},
			{
				title: "For Contractors",
				href: "/industries/contractors",
				type: "industry",
				description: "Professional AI phone systems for general contractors and construction businesses."
			}
		]
	};
	
	return industryMap[industry] || [
		{
			title: "For Contractors",
			href: "/industries/contractors",
			type: "industry" as const,
			description: "Professional AI phone systems for contractors and service-based businesses."
		},
		{
			title: "Australia Services",
			href: "/locations/australia", 
			type: "location" as const,
			description: "AI phone agents serving Australian businesses with local expertise and cultural understanding."
		}
	];
};
---

<Layout 
	title={title}
	description={description}
	keywords={keywords}
>
	<IndustrySchema
		industry={industry}
		targetAudience={getTargetAudience(industry)}
		specificServices={specificServices}
		industryKeywords={industryKeywords}
		avgCallValue={roiData.avgCallValue}
		testimonialAuthor={testimonial.name}
		testimonialText={testimonial.quote}
		testimonialRating="5"
	/>
	
	<ServiceSchema
		serviceType="industry"
		serviceName={`AI Phone Agent for ${industry}`}
		description={`Specialized AI phone system designed for ${industry.toLowerCase()} businesses. Includes industry-specific call handling, emergency prioritization, and customer service automation tailored to ${industry.toLowerCase()} operations.`}
		serviceUrl={`/industries/${industry.toLowerCase().replace(/\s+/g, '-')}`}
		serviceCategory="ProfessionalService"
		price={{
			value: roiData.aiCost,
			currency: "USD",
			per: "MONTH"
		}}
		features={specificServices}
		industry={industry}
		targetAudience={getTargetAudience(industry)}
		availableHours="24/7"
	/>
	
	<Header />
	
	<main class="enhanced-industry-main">
		<!-- Hero Section with Dream Outcome -->
		<section class="enhanced-hero section-padding">
			<div class="circuit-bg"></div>
			<div class="floating-blob blob-1"></div>
			<div class="floating-blob blob-2"></div>
			
			<div class="container hero-content">
				<div class="hero-text animate-fade-in">
					<div class="hero-badge">
						<svg class="badge-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M12 2L3.09 8.26L4 21L12 17L20 21L20.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						#1 AI Phone Agent for {industry}
					</div>
					<h1 class="hero-title">
						{heroTitle}
					</h1>
					<div class="dream-outcome-box">
						<h2 class="dream-title">{dreamOutcomeTitle}:</h2>
						<p class="dream-text">{dreamOutcome}</p>
					</div>
					<p class="hero-subtitle">
						{heroSubtitle}
					</p>
					<div class="hero-stats">
						<div class="stat">
							<span class="stat-number">99.9%</span>
							<span class="stat-label">Calls Captured</span>
						</div>
						<div class="stat">
							<span class="stat-number">24/7</span>
							<span class="stat-label">Availability</span>
						</div>
						<div class="stat">
							<span class="stat-number">$499</span>
							<span class="stat-label">Fixed Monthly</span>
						</div>
					</div>
					<div class="hero-buttons">
						<a href="/booking" class="btn btn-primary pulse-animation">
							<svg class="btn-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M8 2V5M16 2V5M3.5 9.09H20.5M21 8.5V17C21 20 19.5 22 16 22H8C4.5 22 3 20 3 17V8.5C3 5.5 4.5 3.5 8 3.5H16C19.5 3.5 21 5.5 21 8.5Z" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							Book Free Strategy Call
						</a>
						<a href="tel:+18773207259" class="btn btn-secondary">
							<svg class="btn-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M3.27 5.49C3 6.02 3 6.66 3 7.94V16.06C3 17.34 3 17.98 3.27 18.51C3.51 18.98 3.89 19.36 4.36 19.6C4.89 19.87 5.53 19.87 6.81 19.87H17.19C18.47 19.87 19.11 19.87 19.64 19.6C20.11 19.36 20.49 18.98 20.73 18.51C21 17.98 21 17.34 21 16.06V7.94C21 6.66 21 6.02 20.73 5.49C20.49 5.02 20.11 4.64 19.64 4.4C19.11 4.13 18.47 4.13 17.19 4.13H6.81C5.53 4.13 4.89 4.13 4.36 4.4C3.89 4.64 3.51 5.02 3.27 5.49Z" stroke="currentColor" stroke-width="1.5"/>
								<path d="M7 9L12 13L17 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							Call: +1 877-320-7259
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Pain Points with Cost Calculator -->
		<section class="pain-analysis-section section-padding">
			<div class="container">
				<div class="section-header">
					<h2 class="section-title">The Hidden Costs Destroying Your {industry} Business</h2>
					<p class="section-subtitle">
						Every missed call is money out of your pocket. Here's what it's really costing you:
					</p>
				</div>
				<div class="pain-grid">
					{painPoints.map((point, index) => (
						<div class="pain-card glass-card animate-slide-up" style={`animation-delay: ${index * 150}ms`}>
							<div class="pain-header">
								<div class="pain-icon">
									<span>{point.icon}</span>
								</div>
								<div class="cost-indicator">
									<span class="cost-label">Costs You:</span>
									<span class="cost-value">{point.cost}</span>
								</div>
							</div>
							<h3 class="pain-title">{point.title}</h3>
							<p class="pain-description">{point.description}</p>
							<div class="pain-impact">
								<svg class="impact-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M12 9V13M12 17.02L12.01 16.99M22 12C22 17.52 17.52 22 12 22C6.48 22 2 17.52 2 12C2 6.48 6.48 2 12 2C17.52 2 22 6.48 22 12Z" stroke="#ef4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
								<span class="impact-text">Lost Revenue Daily</span>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Solution Section -->
		<section class="solution-section section-padding">
			<div class="container">
				<div class="section-header">
					<h2 class="section-title">The Solution: AI Phone Agent</h2>
					<p class="section-subtitle">
						Transform problems into profit with intelligent automation
					</p>
				</div>
				<div class="benefits-grid">
					{benefits.map((benefit, index) => (
						<div class="benefit-card glass-card animate-slide-up" style={`animation-delay: ${index * 120}ms`}>
							<div class="benefit-icon neon-border">
								<span>{benefit.icon}</span>
							</div>
							<h3 class="benefit-title">{benefit.title}</h3>
							<p class="benefit-description">{benefit.description}</p>
							<div class="benefit-outcome">
								<svg class="outcome-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M9 12L11 14L15 10M21 12C21 16.97 16.97 21 12 21C7.03 21 3 16.97 3 12C3 7.03 7.03 3 12 3C16.97 3 21 7.03 21 12Z" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
								<span class="outcome-text">Revenue Recovered</span>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Case Studies Section -->
		<section class="case-studies-section section-padding">
			<div class="container">
				<div class="section-header">
					<h2 class="section-title">Real {industry} Success Stories</h2>
					<p class="section-subtitle">
						See exactly how AI Phone Agent transforms {industry.toLowerCase()} practices
					</p>
				</div>
				<div class="case-studies-grid">
					{caseStudies.map((study, index) => (
						<div class="case-study-card glass-card animate-fade-in" style={`animation-delay: ${index * 200}ms`}>
							<div class="case-number">Case {index + 1}</div>
							<h3 class="case-title">{study.title}</h3>
							<div class="case-content">
								<div class="case-section">
									<h4 class="case-section-title">The Challenge:</h4>
									<p class="case-text">{study.scenario}</p>
								</div>
								<div class="case-section">
									<h4 class="case-section-title">AI Solution:</h4>
									<p class="case-text">{study.solution}</p>
								</div>
								<div class="case-section result">
									<h4 class="case-section-title">The Result:</h4>
									<p class="case-text result-text">{study.result}</p>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- ROI Calculator -->
		<section class="roi-calculator-section section-padding">
			<div class="container">
				<div class="section-header">
					<h2 class="section-title">Calculate Your ROI in 30 Seconds</h2>
					<p class="section-subtitle">
						See exactly how much you could save and earn with AI Phone Agent
					</p>
				</div>
				<div class="roi-calculator glass-card">
					<div class="calculator-grid">
						<div class="calculator-inputs">
							<h3 class="calculator-title">Your Business Metrics</h3>
							<div class="input-group">
								<label for="avg-call-value">Average Call Value ($)</label>
								<input type="number" id="avg-call-value" value={roiData.avgCallValue} min="50" max="2000" step="10">
							</div>
							<div class="input-group">
								<label for="missed-calls">Missed Calls/Month</label>
								<input type="number" id="missed-calls" value={roiData.missedCallsPerMonth} min="1" max="100" step="1">
							</div>
							<div class="input-group">
								<label for="ai-cost">AI Agent Cost/Month ($)</label>
								<input type="number" id="ai-cost" value={roiData.aiCost} readonly>
							</div>
						</div>
						<div class="calculator-results">
							<h3 class="calculator-title">Your Potential ROI</h3>
							<div class="roi-metrics">
								<div class="roi-metric">
									<span class="roi-label">Monthly Lost Revenue:</span>
									<span class="roi-value loss" id="lost-revenue">$0</span>
								</div>
								<div class="roi-metric">
									<span class="roi-label">AI Agent Cost:</span>
									<span class="roi-value cost" id="ai-agent-cost">$499</span>
								</div>
								<div class="roi-metric">
									<span class="roi-label">Monthly Savings:</span>
									<span class="roi-value profit" id="monthly-savings">$0</span>
								</div>
								<div class="roi-metric featured">
									<span class="roi-label">Annual ROI:</span>
									<span class="roi-value profit-big" id="annual-roi">0%</span>
								</div>
							</div>
							<div class="roi-cta">
								<a href="/booking" class="btn btn-primary">
									Get This ROI for Your Business
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Testimonial with Results -->
		<section class="testimonial-section section-padding">
			<div class="container">
				<div class="testimonial-card glass-card animate-fade-in">
					<div class="testimonial-badge">
						<svg class="star-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M11.049 2.927C11.322 2.094 12.678 2.094 12.951 2.927L14.4 7.639C14.521 8.013 14.865 8.274 15.267 8.274H20.22C21.108 8.274 21.482 9.501 20.807 10.015L16.877 12.832C16.564 13.066 16.431 13.468 16.552 13.842L18.001 18.554C18.274 19.387 17.232 20.063 16.557 19.549L12.627 16.732C12.314 16.498 11.686 16.498 11.373 16.732L7.443 19.549C6.768 20.063 5.726 19.387 5.999 18.554L7.448 13.842C7.569 13.468 7.436 13.066 7.123 12.832L3.193 10.015C2.518 9.501 2.892 8.274 3.78 8.274H8.733C9.135 8.274 9.479 8.013 9.6 7.639L11.049 2.927Z" fill="currentColor"/>
						</svg>
						Real Client Success
					</div>
					<div class="testimonial-header">
						<img 
							src={testimonial.image} 
							alt={testimonial.name}
							class="testimonial-image"
							loading="lazy"
						/>
						<div class="testimonial-info">
							<h3 class="testimonial-name">{testimonial.name}</h3>
							<p class="testimonial-title">{testimonial.title}</p>
							<div class="testimonial-results">
								<span class="result-badge">+{testimonial.revenue} Revenue</span>
								<span class="result-timeframe">in {testimonial.timeframe}</span>
							</div>
						</div>
					</div>
					<div class="testimonial-rating">
						{[1,2,3,4,5].map(() => (
							<svg class="star" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M11.049 2.927C11.322 2.094 12.678 2.094 12.951 2.927L14.4 7.639C14.521 8.013 14.865 8.274 15.267 8.274H20.22C21.108 8.274 21.482 9.501 20.807 10.015L16.877 12.832C16.564 13.066 16.431 13.468 16.552 13.842L18.001 18.554C18.274 19.387 17.232 20.063 16.557 19.549L12.627 16.732C12.314 16.498 11.686 16.498 11.373 16.732L7.443 19.549C6.768 20.063 5.726 19.387 5.999 18.554L7.448 13.842C7.569 13.468 7.436 13.066 7.123 12.832L3.193 10.015C2.518 9.501 2.892 8.274 3.78 8.274H8.733C9.135 8.274 9.479 8.013 9.6 7.639L11.049 2.927Z" fill="currentColor"/>
							</svg>
						))}
					</div>
					<p class="testimonial-quote">"{testimonial.quote}"</p>
				</div>
			</div>
		</section>

		<!-- Related Content Section -->
		<section class="related-content-section section-padding">
			<div class="container">
				<RelatedContent 
					items={getRelatedContent(industry)}
					title={`Related ${industry} Resources`}
					layout="horizontal"
				/>
			</div>
		</section>

		<!-- Final CTA -->
		<section class="final-cta-section">
			<div class="floating-blob blob-3"></div>
			<div class="floating-blob blob-4"></div>
			<div class="circuit-bg"></div>
			<div class="container">
				<div class="cta-content animate-fade-in">
					<div class="cta-urgency">
						<svg class="urgency-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
							<polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						<span>Don't Wait - Every Day Costs You Money</span>
					</div>
					<h2 class="cta-title">Ready to Stop Losing Revenue?</h2>
					<p class="cta-subtitle">
						Book your free strategy call now and see exactly how AI Phone Agent will transform your {industry.toLowerCase()} practice. No obligations, just results.
					</p>
					<div class="cta-guarantee">
						<svg class="shield-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M12 22S8 18 8 13V6L12 4L16 6V13C16 18 12 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						<span>30-Day Money-Back Guarantee</span>
					</div>
					<div class="cta-buttons">
						<a href="/booking" class="btn btn-primary cta-button pulse-animation">
							<svg class="btn-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M8 2V5M16 2V5M3.5 9.09H20.5M21 8.5V17C21 20 19.5 22 16 22H8C4.5 22 3 20 3 17V8.5C3 5.5 4.5 3.5 8 3.5H16C19.5 3.5 21 5.5 21 8.5Z" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
							Book Free Strategy Call Now
						</a>
